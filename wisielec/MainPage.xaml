<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wisielec.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image Source="hangman_nine.png" HeightRequest="400"/>
                </StackLayout>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackLayout x:Name="gridHiddenMsg" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">
                        <!-- dynamically generated Label with hidden message -->
                    </StackLayout>

                    <StackLayout x:Name="gridButtons" Grid.Row="1" VerticalOptions="Center">
                        <!-- dynamically generated Grid with buttons -->
                    </StackLayout>
                </Grid>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
